{
  "name": "hismacomp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "homepage": "https://a-a-m-k.github.io/HiSMaComp",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:analyze": "vite build && echo 'Bundle analysis generated at dist/bundle-analysis.html'",
    "preview": "vite preview",
    "test": "NODE_OPTIONS=--max-old-space-size=4096 vitest",
    "test:ui": "NODE_OPTIONS=--max-old-space-size=4096 vitest --ui",
    "test:run": "NODE_OPTIONS=--max-old-space-size=4096 vitest run",
    "test:coverage": "NODE_OPTIONS=--max-old-space-size=4096 vitest run --coverage",
    "test:visual": "playwright test tests/e2e/visual-zoom.spec.ts",
    "test:e2e": "playwright test tests/e2e",
    "test:unit": "NODE_OPTIONS=--max-old-space-size=4096 vitest run tests/unit",
    "zoom:report": "tsx scripts/generateZoomReport.ts",
    "prepare": "husky",
    "lint": "npx lint-staged",
    "lint:check": "eslint . --ext .ts,.tsx",
    "prettier": "prettier --write .",
    "prettier:check": "prettier --check .",
    "format": "prettier --write . && eslint . --ext .ts,.tsx --fix",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "perf:audit": "lighthouse http://localhost:5173 --output=html --output-path=./lighthouse-report.html",
    "perf:budget": "npm run build && npm run perf:audit"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@emotion/css": "^11.13.5",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/icons-material": "^6.4.2",
    "@mui/material": "^6.4.2",
    "html2canvas": "^1.4.1",
    "maplibre-gl": "^5.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-map-gl": "^8.0.4",
    "web-vitals": "^2.1.4"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.11.0",
    "@eslint/js": "^9.17.0",
    "@playwright/test": "^1.56.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/babel__traverse": "^7.20.7",
    "@types/node": "^22.15.30",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@typescript-eslint/eslint-plugin": "^8.43.0",
    "@typescript-eslint/parser": "^8.43.0",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.17.0",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "gh-pages": "^6.3.0",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jiti": "^2.4.2",
    "jsdom": "^27.0.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "rollup-plugin-visualizer": "^6.0.3",
    "terser": "^5.44.0",
    "tsx": "^4.20.6",
    "typescript": "^5.6.3",
    "vite": "^6.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  }
}
